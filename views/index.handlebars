<div class="jumbotron">
  <h1>Buffalo Wings</h1>
  <img src="wings.png">
</div>

<div class="row">

  <div class="col-md-3.5">
    <h3>Wings to Eat:</h3>
    <ul>
      {{#each wings}} {{#unless devoured}} {{> wings/wing-block devour=true}} {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="col-md-5">
    <h3>Devoured Wings:</h3>
    <ul>
      {{#each wings}} {{#if devoured}} {{> wings/wing-block devour=false}} {{/if}} {{/each}}
    </ul>
  </div>

  <div class="col-md-3.5">
    <h3>Add a Flavor</h3>
    <form class="create-form">
      <div class="form-group">
        <input type="text" id="wi" name="flavor">
        <button type="submit">Add Flavor</button>
      </div>
  </div>

</div>
</form>